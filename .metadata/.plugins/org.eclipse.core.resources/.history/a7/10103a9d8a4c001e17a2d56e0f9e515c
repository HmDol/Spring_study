let cate1 = ["첂", "쌰첲", "컋킽콼"];
let cate2 = [["찔쨬줯", "쒚줰", "쮅찤"], ["TV", "쨮콫쐑", "천썴"], ["온쫔콜", "篠쉌", "촸줦쐑쐑"]];
let cate3 = [[["浩킿", "쾟킿"], ["쨴", "좣쵔", "쒗"],["앁줯", "時줯"]], 
	[["lg tv", "庸 tv", " tv"], ["lg 쨮콫쐑", "庸 쨮콫쐑", " 쨮콫쐑"], ["lg 천썴", "庸 천썴", " 천썴"]],
	[["lg 온쫔콜", "庸 온쫔콜"], ["lg 篠쉌", "庸 篠쉌", " 篠쉌"],["촞썐", "쫔", "쟜첇콜"]]];

//퀷첇쵔 쫚첕쫚 탺溝
window.onload = () => {
	let txt = "<table style='background-color:gray'>";
	for(i=0;i<cate1.length;i++){
		txt += "<tr><td style='width:100px;height:40px' onmouseover='cf("+i+")'>"+cate1[i]+"</td></tr>";
	}
	txt += "</table>";
	let el = document.getElementById("cate1");
	el.innerHTML = txt;
}
const cf = (idx) => {
	alert(cate2[idx].toString());
}
const a = () => {
	let el = document.getElementById("cate1");
	el.style.display='';
}
const b = () => {
	let el = document.getElementById("cate1");
	el.style.display='none';
}
