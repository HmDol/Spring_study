    pageEncoding="EUC-KR"%>
<!DOCTYPE html>
<html>
<head>
<meta charset="EUC-KR">
<title>Insert title here</title>
</head>
<style>
#categoryContainer ul {
    display: none;
}

#categoryContainer:hover ul {
    display: block;
}
</style>
<script>
let cate1 = ["첂", "쌰첲", "컋킽콼"];
let cate2 = [["찔쨬줯", "쒚줰", "쮅찤"], ["TV","쨮콫쐑","천썴"], ["온쫔콜", "篠쉌", "촸줦쐑쐑"]];
let cate3 = [[["浩킿","쾟킿"], ["쨴","좣쵔","쒗"],["앁줯", "時줯"]],
	[["LG TV","庸죖V","횞V"],["LG쨮콫쐑","庸줲쨴좀"," 쨮콫쐑"],["LG천썴","庸줩천썴","훱천썴"]],
	[["LG온쫔콜","庸줫봏줸뽠"," 온쫔콜"],["LG篠쉌","庸줩篠쉌","훱篠쉌"],["촞썐","쫔","쟜첇콜"]]];

window.onload = function() {
    let ul1 = document.getElementById('cate1');

    for(let i=0; i<cate1.length; i++) {
        let li1 = document.createElement('li');
        li1.textContent = cate1[i];
        
        let ul2 = document.createElement('ul');
        for(let j=0; j<cate2[i].length; j++) {
            let li2 = document.createElement('li');
            li2.textContent = cate2[i][j];
            
            let ul3 = document.createElement('ul');
            for(let k=0; k<cate3[i][j].length; k++) {
                let li3=document.createElement('li');
                li3.textContent=cate3[i][j][k];
                ul3.appendChild(li3);
            }
            
            li2.appendChild(ul3);
            ul2.appendChild(li2);
        }
        
        li1.appendChild(ul2);
        ul1.appendChild(li1);
    }
};
</script>

<body>
<center>
<div id="categoryContainer">
    <ul id="cate1"></ul>
</div>
</center>
</body>
</html>